<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto mb-3 mt-3">
      <img class="burger"src="assets/img/burger.png" />
      <h1>EAT-DA-BURGER!</h1>
    </div>
  </div>

  
 {{!-- Takes in the burger name input when the submit button is clicked --}}
    <div class="row m-3">
      <div class="col-md-6">
        {{#each burgers}}
        {{#unless devoured}}
        <div class="input-group">
          <li class="form-control">{{id}}: {{burger_name}}</li>
          <span class="input-group-btn">
            <button class="btn btn-dark devour-btn devour " data-id="{{id}} " type="submit" data-toggle="button" aria-pressed="false">Devour!</button>
          </span>
        </div>
        {{/unless}}
        {{/each}}
      </div>
      {{!-- When the devoured button is clicked, burgers populate here --}}
      <div class="col-md-6">
        {{#each burgers}}
        {{#if devoured}}
          <div class="input-group">
            <li class="form-control">{{id}}: {{burger_name}}</li>
            <span class="input-group-btn">
              <button class="btn btn-danger delete" data-id="{{id}}" data-toggle="button" aria-pressed="false" type="submit"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
